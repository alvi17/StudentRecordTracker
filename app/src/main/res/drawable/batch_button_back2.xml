<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <gradient android:startColor="#b69657"
                android:angle="270"

                android:endColor="#365a6c"/>

            <stroke android:color="#af7d36" android:width="1dp"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#af680a"/>
            <stroke android:color="#be5805" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#af680a"/>
            <stroke android:color="#be5805" android:width="1dp"/>
        </shape>
    </item>

</selector>