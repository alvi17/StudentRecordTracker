<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <gradient android:startColor="#99c4ba"
                android:angle="270"

                android:endColor="#8b483f"/>

            <stroke android:color="#863426" android:width="1dp"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#6c140e"/>
            <stroke android:color="#680d03" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#6c140e"/>
            <stroke android:color="#680d03" android:width="1dp"/>
        </shape>
    </item>

</selector>