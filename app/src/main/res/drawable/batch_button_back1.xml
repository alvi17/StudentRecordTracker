<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <gradient android:startColor="#7283bc"
                android:angle="270"

                android:endColor="#275973"/>

            <stroke android:color="#367baf" android:width="1dp"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#0a36af"/>
            <stroke android:color="#193674" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp">
            </corners>
            <solid android:color="#0a36af"/>
            <stroke android:color="#193674" android:width="1dp"/>
        </shape>
    </item>

</selector>